<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/feedback_logo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did you get your share of Legal news today?"
        android:textColor="@color/clr_black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please rate us if you did:"
        android:textColor="@color/clr_black"
        android:textStyle="italic"
        android:textSize="17dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/emo01"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emo02"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emo03"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/emoji4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emo04"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/emoji5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emo05"
            android:layout_marginRight="20dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>