<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/advertisement_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/day_gray_text"
            card_view:cardCornerRadius="@dimen/dim_cardviewradius"
            card_view:cardElevation="0dp"
            card_view:contentPadding="0dp">

            <ImageView
                android:id="@+id/advertisement_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible" />


            <LinearLayout
                        android:id="@+id/share_layer"
                        android:layout_width="wrap_content"
                        android:background="@drawable/border_sharebuttonxml"
                        android:orientation="horizontal"
                        android:layout_marginBottom="50dp"
                        android:visibility="invisible"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/advertisement_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="8sp"
                                android:paddingTop="8dp"
                                android:paddingLeft="15sp"
                                android:gravity="center"
                                android:background="@color/clr_blank"
                                android:paddingRight="22sp"
                                android:textAllCaps="false"
                                android:layout_gravity="center|bottom"
                                android:textColor="@color/clr_blue"
                                android:textSize="15sp"
                                android:textStyle="normal"
                                android:visibility="invisible" />


                    </LinearLayout>






        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>