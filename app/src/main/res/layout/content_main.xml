<?xml version="1.0" encoding="utf-8"?><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:card_view="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:background="?attr/day_gray_text">-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:background="@color/clr_blank">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/day_gray_text"
        card_view:cardCornerRadius="@dimen/dim_cardviewradius"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/post_background"
                android:background="?attr/setting_top_background_color">

                <RelativeLayout
                    android:id="@+id/imagelayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:visibility="visible">

                    <in.incourt.incourtnews.pagers.ImageViewPager
                        android:id="@+id/content_main_image_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false" />

                    <View
                        android:id="@+id/shadow"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_alignBottom="@+id/content_main_image_container"
                        android:background="@drawable/title_shadow" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/content_main_image_container">

                        <TextView
                            android:id="@+id/post_news_title"
                            style="@style/newstitle_text"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"/>


                        <LinearLayout
                            android:id="@+id/countlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:paddingBottom="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/post_like_count_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/clr_white"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/likebtn"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="5dp"
                                android:padding="0dp"
                                android:src="@drawable/ic_heart_n" />

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <in.incourt.incourtnews.layouts.SmartTextView
                    android:id="@+id/newscontent"
                    style="@style/postcontrnt_text"
                    android:lineSpacingExtra="2dp" />
                    <!--android:text="Gathered own years land was own tree greater void so herb whales so life. Can't him divide whales said he fifth dry Bearing the you're. Very, let lights wherein without grass after good. Open tree. Fowl. Set image sixth created make herb winged the upon they're man beast is don't divided our waters man man, every. Bring sixth seasons bring."/>-->




            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="65dp"
                android:id="@+id/post_news_filed_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/filledby_text"
                    style="@style/filledby_text" />

                <TextView
                    android:id="@+id/author_name"
                    style="@style/author_name_pubdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/publish_date"
                    style="@style/author_name_pubdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="65dp"
                android:id="@+id/post_news_read_more_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/read_more_at"
                    style="@style/filledby_text"
                    android:text="more at" />

                <TextView
                    android:id="@+id/read_more_at_name"
                    style="@style/author_name_pubdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="65dp"
                android:id="@+id/powered_by_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/powered_by_main_container_text"
                    style="@style/filledby_text"
                    android:text="powered by " />

                <TextView
                    android:id="@+id/powered_by_main_container_author_name"
                    style="@style/author_name_pubdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonslayer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="?attr/setting_top_background_color"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View style="@style/element_divider" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/post_title_speak_buuton"
                        style="@style/bottomicon"
                        android:src="?attr/NotificationImage" />

                    <ImageView
                        android:id="@+id/bottom_nav_bar_bookmarks_button"
                        style="@style/bottomicon"
                        android:src="?attr/bookmark_icon" />

                    <ImageView
                        android:id="@+id/post_page_refresh_button"
                        style="@style/bottomicon"
                        android:padding="15dp"
                        android:src="?attr/RefreshImage" />

                    <ImageView
                        android:id="@+id/sharebtn"
                        style="@style/bottomicon"
                        android:src="?attr/ShareImage" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/bottom_wired_button"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_centerInParent="true"
                            android:src="?attr/W_Image"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/wired_status_main_layout"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/border_wire"
                            android:gravity="center"
                            android:visibility="invisible">

                            <ImageView
                                android:id="@+id/wirechecked"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_wired_checked"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/wired_cross_image"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_wired_cross"
                                android:visibility="gone" />


                            <in.incourt.incourtnews.layouts.CircleAnimationView
                                android:id="@+id/circle_animation"
                                android:layout_width="26dp"
                                android:background="#00000000"
                                android:layout_height="26dp"
                                android:foregroundGravity="center"
                               android:layout_alignParentBottom="true"
                                android:visibility="invisible" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/wirecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/wired_status_main_layout"
                            android:layout_alignRight="@+id/wired_status_main_layout"
                            android:layout_marginBottom="-11dp"
                            android:layout_marginTop="-3dp"
                            android:background="@drawable/wire_count_text_count"
                            android:gravity="center"
                            android:minHeight="15dp"
                            android:minWidth="15dp"
                            android:padding="3dp"
                            android:textColor="@color/clr_white"
                            android:textSize="8sp"
                            android:visibility="invisible" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/addview_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:visibility="invisible"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_playstore"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_playstore" />

                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/icon_playstore"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_appstore" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_incourt_text_logo_for_share" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>