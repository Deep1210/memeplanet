<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_showcase"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/swipehand"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomlayer"
       android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/showcase_hand" />


    <LinearLayout
        android:id="@+id/bottomlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:background="@drawable/border_showcase_white"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/showcase_arrow" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                style="@style/newstitle_text"
                android:layout_alignParentLeft="true"
                android:paddingTop="8dp"
                android:text="Swipe for Detailed Source and Link"
                android:textColor="@color/clr_blue"
                android:textSize="16sp" />

            <TextView

                style="@style/newstitle_text"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="-16dp"
                android:paddingRight="8dp"
                android:text="You can also swipe from the right for detailed source."
                android:textColor="#757575"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>